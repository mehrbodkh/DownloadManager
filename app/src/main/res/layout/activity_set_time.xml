<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mehrbod.downloadmanager.SetTimeActivity">

    <Button
        android:id="@+id/setTimeActivityStartTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:onClick="onStartTimeButtonClickListener"
        android:layout_margin="32dp"
        android:text="Start Time" />

    <Button
        android:id="@+id/setTimeActivityFinishTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish Time"
        android:layout_marginRight="32dp"
        android:layout_alignBaseline="@+id/setTimeActivityStartTimeButton"
        android:layout_alignBottom="@+id/setTimeActivityStartTimeButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onFinishTimeButtonClickListener"
        android:layout_marginEnd="32dp" />
</RelativeLayout>
